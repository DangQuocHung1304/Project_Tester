<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">

    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Content/Home/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Content/Home/css/icomoon.css">
    <!-- Themify Icons-->
    <link rel="stylesheet" href="~/Content/Home/css/themify-icons.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Content/Home/css/bootstrap.css">
    
    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Content/Home/css/magnific-popup.css">

    <!-- Bootstrap DateTimePicker -->
    <link rel="stylesheet" href="~/Content/Home/css/bootstrap-datetimepicker.min.css">

    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="~/Content/Home/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/Home/css/owl.theme.default.min.css">

    <link href="~/Content/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Content/Home/css/style.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <!-- Modernizr JS -->
    <script src="~/Content/Home/js/modernizr-2.6.2.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>

<body>

    <div class="gtco-loader"></div>

    <div id="page">
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">
                <div class="row-content">
                    <div class="col-xs-12">
                        <ul class="gtco-nav-list">
                            <li class="gtco-nav-item">
                                <a href="@Url.Action("Index", "Home")"><i style='font-size:40px' class="glyphicon"></i></a>
                            </li>
                            <li class="gtco-nav-item has-dropdown">
                                <a href="#">Bảng giá</a>
                                <ul class="dropdown">
                                    <li><a href="@Url.Action("GiaPhong", "BangGia")">Giá phòng</a></li>
                                    <li><a href="@Url.Action("GiaDichVu", "BangGia")">Giá dịch vụ</a></li>
                                </ul>
                            </li>
                            <li class="gtco-nav-item"><a href="@Url.Action("About", "Home")">Giới thiệu</a></li>
                            <li class="gtco-nac-item has-dropdown">
                                <a href="#">
                                    Phòng
                                </a>
                                <ul class="dropdown">
                                    <li><a href="@Url.Action("PhongDon","Home")">Phòng Đơn</a></li>
                                    <li><a href="@Url.Action("PhongDoi", "Home")">Phòng Đôi</a></li>
                                    <li><a href="@Url.Action("CamPing", "Home")">CamPing</a></li>
                                </ul>
                            </li>
                            <li class="gtco-nav-item"><a href="@Url.Action("TimPhong", "Home")">Tìm Phòng</a></li>
                            <li class="gtco-nav-item"><a href="@Url.Action("DiaDiem", "Home")">Địa Điểm</a></li>
                            <li class="gtco-nav-item"><a href="@Url.Action("Contact", "Home")">Phản Hồi</a></li>
                            <li class="gtco-nav-item has-dropdown">
                                @{
                                    if (Session["KH"] != null)
                                    {
                                        QLKS.Models.tblKhachHang kh = (QLKS.Models.tblKhachHang)Session["KH"];
                                        <a href="#">@kh.ho_ten</a>
                                        <ul class="dropdown">
                                            <li><a href="@Url.Action("PhieuDatPhong", "Account")">Phiếu đặt phòng</a></li>
                                            <li><a href="@Url.Action("HoaDon", "Account")">Hóa Đơn</a></li>
                                            <li><a href="@Url.Action("CaNhan", "Account")">Sửa thông tin</a></li>
                                            <li><a onclick="return confirm('Bạn có thực sự muốn đăng xuất ?');" href="@Url.Action("Logout", "Account")">Đăng Xuất</a></li>
                                        </ul>
                                    }
                                    else
                                    {
                                        <a href="#">Khách hàng</a>
                                        <ul class="dropdown">
                                            <li><a href="@Url.Action("Login", "Account")">Đăng Nhập</a></li>
                                            <li><a href="@Url.Action("Register", "Account")">Tạo Tài Khoản</a></li>
                                        </ul>
                                    }
                                }
                            </li>
                            <li class="gtco-nav-item btn-cta"><a href="@Url.Action("BookRoom", "Home")"><span>Đặt phòng</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        @RenderBody()

        <footer id="gtco-footer" role="contentinfo" style="background-image: url(/Content/Home/images/bg.jpg)" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="gtco-container">
                <div class="row row-pb-md">
                    <div class="col-md-12 text-center">
                        <div class="gtco-widget">
                            <h3 style="color:black">Liên Hệ</h3>
                            <ul class="gtco-quick-contact">
                                <li><a href="#"><i class="icon-phone"></i> 1800 9090</a></li>
                                <li><a href="#"><i class="icon-mail2"></i> lengkenghomestay@gmail.com</a></li>
                                <li><a href="@Url.Action("contact")"><i class="icon-chat"></i> Phản Hồi</a></li>
                            </ul>
                        </div>
                        <div class="gtco-widget">
                            <h3 style="color:black">Mạng Xã Hội</h3>
                            <ul class="gtco-social-icons">
                                <li><a href="#"><i class="icon-twitter"></i></a>Twitter</li>
                                <li><a href="#"><i class="icon-facebook"></i></a>Facebook</li>

                            </ul>
                        </div>
                    </div>

                    <div class="col-md-12 text-center copyright">
                        <p>
                            <small class="block">&copy; 2024. All Rights Reserved.</small>
                            <small class="block">Designed and Developed by <a href="#" target="_blank">LengKengTeam</a></small>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
        <!-- </div> -->

    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/Content/Home/js/jquery.min.js"></script>
    <script src="~/Content/Home/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/Home/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Content/Home/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="~/Content/Home/js/owl.carousel.min.js"></script>
    <!-- countTo -->
    <script src="~/Content/Home/js/jquery.countTo.js"></script>

    <!-- Stellar Parallax -->
    <script src="~/Content/Home/js/jquery.stellar.min.js"></script>

    <!-- Magnific Popup -->
    <script src="~/Content/Home/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/Home/js/magnific-popup-options.js"></script>

    <script src="~/Content/Home/js/moment.min.js"></script>
    <script src="~/Content/Home/js/bootstrap-datetimepicker.min.js"></script>


    <!-- Main -->
    <script src="~/Content/Home/js/main.js"></script>
  
</body>
</html>